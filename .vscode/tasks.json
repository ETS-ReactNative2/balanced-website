{
	"version": "2.0.0",
	"tasks": [
		{
			"taskName": "Lint all files",
			"command": "./node_modules/.bin/eslint",
			"args": [
				"src"
			],
			"type": "shell",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": "$eslint-stylish",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}